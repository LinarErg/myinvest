	Адрес = СтрЗаменить(Адрес,"%МесяцНачало", Месяц(НачалоПериода));
	Адрес = СтрЗаменить(Адрес,"%ДеньНачало", Формат(День(НачалоПериода),"ЧЦ=2; ЧВН=" ));
